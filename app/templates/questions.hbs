<div class="row">
  <div class="col-xs-12 activityfeed">
    <div class="search-form form">
      <div class="form-group">
        {{view Ember.TextField valueBinding="searchQuery" class='form-control input-lg search-field' placeholder="Rechercher une question, une thématique ou un politique"}}
      </div>
    </div>
    {{#if searchQuery}}
      <div class="search-query">
        <h3>{{foundQuestionsTotal}} résultats pour: {{searchQuery}}</h3>
      </div>
    {{/if}}

    <div class="inf-scroll-outer-container vertical">
      <div class="inf-scroll-inner-container">
        {{#if controller.content}}
          {{#each question in controller.content}}
            {{render 'question_list' question}}
          {{/each}}
        {{else}}
          <div class="spinner"></div>
        {{/if}}
      </div>
      {{#if loadingMore}}
        <div class="spinner"></div>
      {{/if}}
    </div>
  </div>
</div>
